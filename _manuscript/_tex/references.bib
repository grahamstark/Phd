	keywords = {Elasticity, Fuel demand, Income distribution},
	pages = {2740--2749},
	file = {ScienceDirect Full Text PDF:/home/graham_s/Zotero/storage/ZI63AUB5/Wadud et al. - 2009 - Modelling fuel demand for different socio-economic.pdf:application/pdf},
