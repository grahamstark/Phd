	keywords = {austerity, conjoint surveys, fiscal policies, government debt, public opinion, survey experiments, trade-offs},
	pages = {239--263},
	file = {Full Text PDF:/home/graham_s/Zotero/storage/R8J7XQZJ/Bremer and Bürgisser - 2023 - Do citizens care about government debt Evidence f.pdf:application/pdf;Snapshot:/home/graham_s/Zotero/storage/VJKWWI86/1475-6765.html:text/html},
